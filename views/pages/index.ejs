<!DOCTYPE html>

<html>

  <%- include ../layout/head.ejs %>

  <body>

    <%- include ../layout/header.ejs %>

    <main>
      <h2>Your bookshelf: <%= searchResults.length %> Books</h2>
      <ul>
      <% searchResults.forEach(book => { %>
      <li class=<%= book.bookshelf %>>
        <a href= <%= `/books/${book.id}` %>><img src= <%- `"${book.image_url}"` %> alt= <%= book.title %> /></a>
        <h3> <%= book.title %> </h3>
        <h4> <%= book.author %> </h4>
        <p> <%= book.description %> </p>
        <a href=<%= `/books/${book.id}` %> class="details-button"><div><h4>See Book Details</h4></div></a>
      </li>
      <% }) %>
    </ul>
    </main>

    <%- include ../layout/footer.ejs %>

  </body>
</html>
