<!DOCTYPE html>

<html>

<%- include ../../layout/head.ejs %>

<body>

  <%- include ../../layout/header.ejs %>

  <main>
    <h2>Search Results</h2>
    <ul>
      <% searchResults.forEach(book => { %>
      <li>
        <a href=<%= book.link %>><img src=<%= book.picture %> alt=<%= book.title %> /></a>
        <h3> <%= book.title %> </h3>
        <h4> <%= book.authors %> </h4>
        <p> <%= book.description %> </p>
        <div class="addBook">
          <label>
            <input type="checkbox" class="form-hider">Select This Book</input>
          
          <form class="collectionForm" action="/addToCollection" method="POST">
            <input type="text" name="title" placeholder="Title" value=<%- `"${book.title}"` %>></input>
            <input type="text" name="author" placeholder="Author" value=<%- `"${book.authors}"` %>></input>
            <input type="text" name="isbn" placeholder="ISBN" value=<%- `"${book.isbn}"` %>></input>
            <input type="url" name="image_url" placeholder="Image url" value=<%- `"${book.picture}"` %>></input>
            <input type="text" name="description" placeholder="Description"
              value=<%- `"${book.description}"` %>></input>
            <input type="text" name="bookshelf" placeholder="Bookshelf"></input>

            <button type="submit" class="start">Add to Database</button>
          </form>
        </label>
        </div>
      </li>
      <% }) %>
    </ul>
  </main>

  <%- include ../../layout/footer.ejs %>

</body>

</html>